# ~/.ssh/config

Host *
  AddKeysToAgent yes
  IdentityFile ~/.ssh/id_rsa_brian
  UseKeychain yes

Host github.com
  AddKeysToAgent yes
  UseKeychain yes
  IdentityFile ~/.ssh/id_ed25519

Host linode_brian
  AddKeysToAgent yes
  HostName 97.107.139.136
  IdentityFile ~/.ssh/id_rsa_brian
  Port 1022
  UseKeychain yes
  User brian

Host linode_lunabot
  AddKeysToAgent yes
  HostName 97.107.139.136
  IdentityFile ~/.ssh/id_rsa_lunabot
  Port 1022
  UseKeychain yes
  User lunabot
